<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
	
	<!-- 指定数据连接驱动jar地址 -->
	<classPathEntry location="D:\\java\\MavenRepository\\repo\\mysql\\mysql-connector-java\\5.1.35\\mysql-connector-java-5.1.35.jar" />
	
	<!-- 一个数据库一个context -->
	<context id="pro">
		<!-- 注释 -->
		<commentGenerator >
			<property name="suppressAllComments" value="true"/><!-- 是否取消注释 -->
		</commentGenerator>
		
		<!-- jdbc连接 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/mydb" 
			userId="root"
			password="123456" />
		
		<!-- 生成实体类地址 -->	
		<javaModelGenerator targetPackage="com.pro.entity"
			targetProject="pro" >
			<!-- targetProject="pro" 中的pro 所在项目名称 -->
			<!-- 是否针对string类型的字段在set的时候进行trim调用 -->
			<property name="trimStrings" value="true"/>
		</javaModelGenerator>
		
		<!-- 生成mapxml文件 -->
		<sqlMapGenerator targetPackage="com.pro.mapper.xml"
			targetProject="pro" >
		</sqlMapGenerator>
		
		<!-- 生成mapxml对应client，也就是接口dao -->	
		<javaClientGenerator targetPackage="com.pro.mapper"
			targetProject="pro" type="XMLMAPPER" >
		</javaClientGenerator>
		
		<!-- 配置表信息 -->	
		<table schema="mydb" tableName="collect" domainObjectName="Collect">
			<generatedKey column="clid" sqlStatement="mysql" identity="true"/>
		
		
		</table>
		<table schema="mydb" tableName="comment" domainObjectName="Comment">
			<generatedKey column="cid" sqlStatement="mysql" identity="true" />
		</table>
		
		<table schema="mydb" tableName="saygood" domainObjectName="SayGood">
			<generatedKey column="sgid" sqlStatement="mysql" identity="true"/>
		</table>
		
		<table schema="mydb" tableName="share" domainObjectName="Share">
			<generatedKey column="sid" sqlStatement="mysql" identity="true" />
		</table>
		
		<table schema="mydb" tableName="user" domainObjectName="User">
			<generatedKey  column="uid" sqlStatement="mysql" identity="true"/>
		</table>
		
		

	</context>
</generatorConfiguration>
