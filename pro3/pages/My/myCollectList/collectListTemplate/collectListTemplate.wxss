}

.news{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 180rpx;

}

.newsIcon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;

}

.newsContent{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-top: 20rpx;

}
.newsTitle{
  
  font-size: 38rpx;
}

.newsDate{
  font-size: 28rpx;
